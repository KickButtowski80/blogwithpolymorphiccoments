<script type="text/javascript">
function reply_click(node)
{
    alert("i am clicked" + node );
     nodes = document.querySelector(node).querySelectorAll('.editable')
     nodes[0].setAttribute('contentEditable', 'true')
}
</script>

<% commentable.comments.each do |comment| %>
<div id="comment">
  <strong>Commenter:</strong>
  <p class="editable" src="<%= article_comment_url(comment.id) %>" property="comment['commenter']">
  <%= comment.commenter %>
  </p>

  <strong>Comment:</strong>
  <p  class="editable" src="<%= article_comment_url(comment.id) %>" property="comment['body']">
    <%= comment.body.html_safe %>
  </p>    
</div> 
<p>
    <%#= link_to 'Edit', [:edit, commentable, comment], data: { confirm: 'Are you sure?' } %>
    <%= link_to "Delete", [commentable, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
    <input type="button" onclick="enableEditing('#comment')" value="Edit Comment"></input>
<%end%> 
</p>


  